  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Goalgram</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/vendors/ionicons.min.css">
  </head>
  <body>
    <header>
      <div class="col-header span-1-of-3">
        <h2 class="goalgram"><a href="/posts">Goalgram</a></h2>
      </div>
     <div class="col-header span-1-of-3">
        <div class="wrap">
         <div class="search">
            <input type="text" class="searchusername" placeholder="Search">
            <button type="submit" class="searchbutton">
             <i class="goalgram-search"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="col-header span-1-of-3">
        <ul class="social-links">
          <li><a class="hlinks" href="/posts"><ion-icon name="home"></ion-icon></a></li>
          <li><a class="hlinks" href="/posts/new"><ion-icon name="add-circle-outline"></ion-icon></a></li>
          <li class="dropdown">
            <button class="dropbtn"><ion-icon name="person-outline"></ion-icon></button>
            <div class="dropdown-content">
              <a href="/users">
                <ion-icon class="span-1-of-3" name="person-circle-outline"></ion-icon>
                <h5 class="span-2-of-3">Profile</h5>
              </a>
              <% if logged_in? %>
                <h5><a class="hlinks" href="/logout">Log Out</a></h5>
              <% else %>
                <h5><a class="hlinks" href="/login">Log In</a></h5>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </header>
    <div class="wrapper">

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>Alma Flores </strong></small>
      </footer>
    </div>
    <script src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
