
<div>
    <div>
        <h2><%= current_user.username%></h2>
        <div>
            <button><a href="/users/<%=current_user.id%>/edit">Edit Profile</a></button>
        </div>
    </div>
    <div>
        <img class="profile-pic" src=<%=current_user.image%> alt="Profile Picture" width="164" height="164">
        <h3><%= current_user.name %></h3>
